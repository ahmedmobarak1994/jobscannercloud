name: jobhunt

on:
  workflow_dispatch:
  schedule:
    - cron: "0 */2 * * *"  # every 2 hours

jobs:
  scan:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Cache state
        uses: actions/cache@v4
        with:
          path: .state
          key: jobhunt-state-${{ runner.os }}-${{ github.ref_name }}
          restore-keys: |
            jobhunt-state-${{ runner.os }}-

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run scanner
        env:
          SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK_URL }}
        run: |
          python jobhunt.py --config config.balanced.json scan

      - name: Upload outputs
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: jobhunt-output
          path: out/
